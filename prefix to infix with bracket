#include<iostream>
#include<stdlib.h>
#include<stack>
#include<cstring>
using namespace std;
bool isop(char c)
{
    return (c>='a' && c<='z' || c>='A' && c<='Z');
}
void con(string s)
{
    int l=s.length();
    std::stack<string> st;
    for(int i=l-1;i>=0;i--)
    {
        if(isop(s[i]))
        {
            st.push(string(1,s[i]));
        }
        else
        {
            string s1=st.top();
            st.pop();
            string s2=st.top();
            st.pop();
            string temp='('+s1+s[i]+s2+')';
            st.push(temp);
        }
    }
    cout<<st.top();
}
int main(int argc,char *argv[])
{
    string s=argv[1];
    con(s);
}
