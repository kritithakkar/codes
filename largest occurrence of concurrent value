#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
       cin>>arr[i]; 
    }
    int count,d=0;
    for(int i=0;i<n;i++)
    {
        count=1;
        while(arr[i]==arr[i+1])
        {
            i++;
            count++;
        }
        if(d<count)
        d=count;
    }
    cout<<d;
    return 0;
}
